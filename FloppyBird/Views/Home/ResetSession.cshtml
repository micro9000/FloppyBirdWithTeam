@model FloppyBird.Models.HomeIndexModel
@{
    ViewData["Title"] = "Reset session";
    ViewData["Username"] = Model.User != null ? Model.User.Name : "";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-12 p-lg-5">
            <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="ResetGameSession">
                <h3>Reset session</h3>
                <p><b>Current session: </b>@Model.CurrentSession?.Name</p>
                <select class="form-select" name="numberOfMinutes" aria-label="Select Minutes">
                    <option value="2">2 minutes</option>
                    <option value="3">3 minutes</option>
                    <option value="5">5 minutes</option>
                    <option value="10">10 minutes</option>
                </select>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="scoreCountingType" value="@((int)ScoreCountingType.CountEveryScore)" id="countEveryScore" checked>
                    <label class="form-check-label" for="flexRadioDisabled">
                        Count every score
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="scoreCountingType" value="@((int)ScoreCountingType.CountHighestScoreOnly)" id="countHighestScoreOnly">
                    <label class="form-check-label" for="flexRadioCheckedDisabled">
                        Count highest score only
                    </label>
                </div>
                <button type="submit" class="btn btn-success btn-lg mt-2">Create</button>
            </form>
        </div>
    </div>
</div>
